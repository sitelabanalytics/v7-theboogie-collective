const features = [
  {
    title: "Mood:Blend",
    description:
      "Cairns born, disco and soul insprired bush techno and progressive tech.",
    imgsrc: GraphicDesign,
    imgalt: "The Boogie Collective artist Moodblend",
    link: "/contact",
    style: "primary",
    btntxt: "Book",
    artistlink: "https://soundcloud.com/moodblend",
    artiststyle: "outline",
    artistbtntxt: "Music",
  },
  {
    title: "Scrub Rat",
    description:
      "Tasmania based breaks and dub artist with some of the best mixing you'll find.",
    imgsrc: WebDesign,
    imgalt: "The Boogie Collective artist scrub rat",
    link: "/contact",
    style: "primary",
    btntxt: "Book",
    artistlink: "https://soundcloud.com/scrubrataus",
    artiststyle: "outline",
    artistbtntxt: "Music",
  },
  {
    title: "Lucid Gecko",
    description:
      "Sunshine Coast hinterland inspired morning psytrance, breaks and DnB sounds.",
    imgsrc: Marketing,
    imgalt: "The Boogie Collective artist Lucid Gecko",
    link: "/contact",
    style: "primary",
    btntxt: "Book",
    artistlink: "https://soundcloud.com/lucid-gecko",
    artiststyle: "outline",
    artistbtntxt: "Music",
  },
  {
    title: "Green Euro",
    description:
      "Warehouse inspired progressive full-on out of the Mid Australian Coast.",
    imgsrc: VideoProd,
    imgalt: "The Boogie Collective artist Green Euro",
    link: "/contact",
    style: "primary",
    btntxt: "Book",
    artistlink: "https://soundcloud.com/greeneuro",
    artiststyle: "outline",
    artistbtntxt: "Music",
  },
  {
    title: "Jiver",
    description:
      "Brisbane based warehouse techno and tech. One of Brisbanes's upcoming artists.",
    imgsrc: VideoProd,
    imgalt: "The Boogie Collective artist Jiver",
    link: "/contact",
    style: "primary",
    btntxt: "Book",
    artistlink: "https://soundcloud.com/jiver-2",
    artiststyle: "outline",
    artistbtntxt: "Music",
  },
  {
    title: "Sassafras",
    description:
      "Brisbane dark techno and deep progressive tech, spinning ruckus always.",
    link: "/contact",
    style: "primary",
    btntxt: "Book",
    artistlink: "https://soundcloud.com/sassafrasaus",
    artiststyle: "outline",
    artistbtntxt: "Music",
  },
  {
    title: "Nemophilist",
