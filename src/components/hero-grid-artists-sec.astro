---
<style>
  #heroSection {
    background-image: url('../assets/tbc/DSC01565.jpg');
    background-repeat: no-repeat; 
    background-size: cover;
    background-position: center;
  }
</style>

<main id="heroSection" class="my-8 md:my-16 pb-36 pt-36 rounded-3xl">

  <div id="gridContainer" class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 md:gap-8 m-4">
    {
      features.map((item) => (
        <div class="flex items-start">
          <div id="glass-card" class="card-padding w-full flex flex-col items-start justify-center">
            <div id="textContainer" class="w-full">
              <h2 class="font-semibold text-xl md:text-2xl lg:text-3xl">{item.title}</h2>{" "}
              <p class="text-xs md:text-md mt-4 leading-relaxed">{item.description}</p>
            </div>
            <div id="links" class="pt-6">
              <Link 
                class="mr-2"
                href={item.artistlink || "#"}
                block
                style={item.artiststyle ? "primary" : "outline"}>
                {item.artistbtntxt || "Get Started"}
              </Link>
              <Link 
                class="mr-2 bg-opacity-0"
                href={item.link || "#"}
                block
                style="outline">
                {item.btntxt || "Get Started"}
              </Link>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</main>