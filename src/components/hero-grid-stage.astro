---
// @ts-ignore
import { Icon } from "astro-icon";
import Link from "@components/ui/link.astro";

---
<style>
  #heroSection {
    background-image: url('../assets/tbc/gal-hh2-2.webp');
    background-repeat: no-repeat; 
    background-size: cover;
    background-position: center;
  }
</style>

<main id="heroSection" class="my-8 md:my-16 pt-96 pb-8 rounded-3xl">
  <div class="mb-4 md:mb-8 m-4">
    <div id="glass-card" class="max-w-2xl">
      <h5 class="text-sm lg:text-md text-slate-900 mb-2">
        Event Design + Construction
      </h5>
      <h3 class="text-2xl md:text-3xl lg:text-5xl mb-4 font-bold lg:tracking-tight">
        Immersive Structures.
      </h3>
      <div class="">
      <p class="text-md lg:text-lg"> 
        Local and nationally touring artists from across the Eastern Australian Coast. We have always focused on electronic music production made for outdoor systems that lets the ear and mind wander.
      </p>
      <div id="links" class="pt-6">
        <Link 
          class="mr-2"
          href="/contact"
          block
          style="primary"> 
          Book
        </Link>
        <Link 
          class="mr-2 bg-opacity-0"
          href="/immersive-structures"
          block
          style="outline"> 
          More info
        </Link>
      </div>
    </div>
    </div>
  </div>
</main>