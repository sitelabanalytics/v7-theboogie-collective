---
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import { Picture } from "@astrojs/image/components";

---
<style>
  #heroSection {
    background-image: url('../assets/tbc/hh2-hero.webp');
    background-repeat: no-repeat; 
    background-size: cover;
    background-position: center;
    min-height: 82.5vh;
  }
</style>

<main class="my-4 md:my-8">
  <div id="heroSection" class="flex flex-col lg:flex-row items-end rounded-3xl">
    
    <div>

      <div id="glass-card" class="max-w-3xl mx-4 my-8">
        <h1 style="heroTagline" class="text-4xl sm:text-5xl md:text-4xl lg:text-6xl xl:text-7xl w-full max-w-6xl font-bold tracking-tight">
          Welcome to the Collective.
        </h1>
        <p class="text-lg lg:text-xl mt-4">
          Australian music label for progressive electronic artists. Sets with soul, not held within bounds. 
          From disco to bush techno, breaks to dark dub-bass, dark prog to full on. Helping you stop dancing inside since 2016.   
          <wbr>
        </p>
        <div class="mt-6 flex flex-col sm:flex-row justify-start gap-3">
          <a href="https://theboogiecollective.com/contact" rel="noopener" class="rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 px-5 py-2.5 bg-black text-white hover:bg-gray-800 border-2 border-transparent flex gap-1 items-center justify-center">
            <svg viewBox="0 0 24 24" class="w-4 h-4">
              <Icon class="text-white" name="ph:chat-teardrop-dots-light" />
            </svg>

            Contact

          </a>
          <a href="https://theboogiecollective.com/artists" rel="noopener" class="rounded bg-opacity-0 text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 px-5 py-2.5 bg-white border-2 border-black hover:bg-gray-100 text-black flex gap-1 items-center justify-center">
            <svg viewBox="0 0 24 24" class="w-4 h-4">
              <Icon class="text-black" name="ph:codepen-logo-light" />
            </svg>
            
            Artists

          </a>
        </div>
      </div>
    </div>
    
  </div>
</main>
