---
// @ts-ignore
import { Icon } from "astro-icon";
import Link from "@components/ui/link.astro";
import { Picture } from "@astrojs/image/components";
import Lrg from '../assets/tbc/gal-hh2-1.jpg';
import Dual from '../assets/tbc/gal-hh2-2.webp';
import Wide from '../assets/tbc/gal-hh2-3.jpg';
import Wide2 from '../assets/tbc/gal-hh2-4.jpg';



const services = [
  {
    imgsrc: Lrg,
    imgalt: "Advertising with Google for free through organic SEO improvements.",
  },
  {
    imgsrc: Dual,
    imgalt: "Advertising with Google for free through organic SEO improvements.",
  },
  {
    imgsrc: Wide,
    imgalt: "Advertising with Google for free through organic SEO improvements.",
  },
  {
    imgsrc: Wide2,
    imgalt: "Advertising with Google for free through organic SEO improvements.",
  },
];
---

<!-- Flickity -->
<!-- CSS -->
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
<script is:inline src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

<!-- Flickity Custom Styles -->
<style>

.carousel-cell {
    margin-right: 10px;
    margin-bottom: 20px;
    border-radius: 15px;
  }
  
  /* Start Flickity viewport safeguards V4 */
  main { max-width: 100%; }
  .flickity-viewport { margin: 0 auto; }
  .raywhite-carousel, .flickity-viewport { max-width: 100vw !important; min-height: 300px; }
  .raywhite-carousel { height: fit-content; }
  /* End Flickity viewport safeguards V4 */


  #works-row { border: black; border-top: ridge; }

  </style>

<main id="works-row" class="mx-auto max-w-7xl mt-12 md:mt-8 pb-4">
  <div class="pt-8 flex flex-row items-start sm:items-center justify-between">
    <div>
      <h5 class="text-xs md:text-sm lg:text-md">
        Event Curation
      </h5>
      <h4 class="text-2xl md:text-3xl lg:text-5xl my-2 font-bold lg:tracking-tight">
        Happiness Hill 2.
      </h4>
    </div>
    <div class="my-6">
      <Link 
        class="text-xs md:text-sm"
        href="/contact"
        style="outline">
        Contact
      </Link>
    </div>
  </div>

<div id="sliderContainer" class="raywhite-carousel">
  {
    services.map((item) => (
      <div class="carousel-cell flex flex-row justify-start items-center w-full sm:w-3/4 lg:w-3/5 xl:w-1/2">
        <Picture
              src={item.imgsrc}
              sizes="(max-width: 1680px) 1680px, 1260px, 840px"
              widths={[840, 1260, 1680]}
              aspectRatio="5:3"
              loading="eager"
              background="#f2f2f200"
              fit="cover"
              position="center"
              class="w-full h-full rounded-md"
            />
      </div>
    ))
  }
</div>
</main>

<script>
  // element argument can be a selector string
  //   for an individual element
  var flkty = new Flickity( '.raywhite-carousel', {
  cellAlign: 'left',
  contain: true,
  prevNextButtons: false,
  pageDots: true,
  imagesLoaded: true
  // lower attraction and lower friction
  // slower transitions
  // easier to flick past cells
  });
</script>

