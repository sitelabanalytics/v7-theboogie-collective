---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Detailedfooter from "@components/detailed-footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import '../styles/main.css';

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "The Boogie Collective"
  : "Outdoor events and artists across the Eastern Australian Coast. Event installations, lighting and stage design as Immersive Structures. Helping you stop dancing inside since 2016.";
---


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap.xml">
    

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Award-winning web design and marketing management based on the Gold Coast, over 10 years experience. Monthly marketing management and optisation all at a fixed price, pause anytime."
      canonical={canonicalURL}
      twitter={{
        creator: "@aidenwood",
        site: "@aidxn.com",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Aidxn Design | Web Design + Marketing Management`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Award-winning web design and marketing management based on the Gold Coast, over 10 years experience. Monthly marketing management and optisation all at a fixed price, pause anytime.",
        },
      }}
    />

  <!-- aidxn.com property linked to search console for better SEO - Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-MN4T5PXYLD"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-MN4T5PXYLD');
    </script>
  </head>

  <style>
    html { max-width: 100vw; overflow-x: hidden; }
  </style>
  
  <body class="bg-white">
    <Navbar />
    <slot />
    <Detailedfooter />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
