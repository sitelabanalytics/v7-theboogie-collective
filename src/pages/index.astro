---
import ContainerFW from "@components/container-fullwidth.astro";
import ContainerXL from "@components/container-xl.astro";
import Container from "@components/container.astro";
import { Picture } from "@astrojs/image/components";

import Hero from "@components/hero.astro";
import Grid from "@components/hero-grid-services.astro";

import WorksSliderBall from "@components/slider-med-works-ball.astro";
import WorksSliderRay from "@components/slider-med-works-rw.astro";
import WorksSliderSnacks from "@components/slider-med-works-snacks.astro";

import SectionHeadImg from "@components/sectionhead-img.astro";
import SectionHeadImgRev from "@components/sectionhead-img-rev.astro";

import ImmersiveCover from '../assets/tbc/immersive-3.jpg';
import EventsCover from '../assets/tbc/hero-hh2-stage-night-med.jpg';
import EventsCover2 from '../assets/tbc/uv-banners.jpg';
import Cta from "@components/cta.astro";
import CtaMoon from "@components/cta-moonshot.astro";
import ProductSlider from "@components/slider-lrg-services-main.astro";
import BlogSlider from "@components/slider-content.astro";
import Logos from "@components/logos.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Award-Winning Web Design for Gold Coast businesses">
  <ContainerFW>
    <Hero />
    <Grid />

  </ContainerFW>

  <ContainerXL>
  
    <SectionHeadImg>
      <Fragment slot="smltitle">
        Events
      </Fragment>
      <Fragment slot="title">
        SEQLD outdoor electronic events.
      </Fragment>
      <Fragment slot="desc">
        We run events with detail and love, just like your grandma's apple pie reciepe, we have our own and it's heavily guarded. 
        We aim to create spaces that everyone feels safe and included, and allowed to express themselves how they feel. 
        Please do you part when attending our events to offer help and hugs where needed.
      </Fragment>
      <Fragment slot="cover">
        <Picture  id="glass-card-dark"
                  src={EventsCover}
                  sizes="(max-width: 2000px) 2000px, 1000px"
                  widths={[1000, 1500, 2000]}
                  aspectRatio="1:1"
                  background="#f2f2f2"
                  fit="cover"
                  position="center"
                  class="w-full rounded duration-200 hover:shadow-sm"
                />
      </Fragment>
    </SectionHeadImg>

    <SectionHeadImgRev>
      <Fragment slot="smltitle">
        Events
      </Fragment>
      <Fragment slot="title">
        Come raise some dust with us.
      </Fragment>
      <Fragment slot="desc">
        We run two formats of events these days. Happiness Hill is our full-feature 3-day event, held in Jimna, QLD. 
        Happiness Valley is our sister single night events. We are working to bring you a series of these events asap.
      </Fragment>
      <Fragment slot="cover">
        <Picture  id="glass-card-dark"
                  src={EventsCover2}
                  sizes="(max-width: 2000px) 2000px, 1000px"
                  widths={[1000, 1500, 2000]}
                  aspectRatio="1:1"
                  background="#f2f2f2"
                  fit="cover"
                  position="center"
                  class="w-full rounded duration-200 hover:shadow-sm"
                />
      </Fragment>
    </SectionHeadImgRev> 
    
  </ContainerXL>

  <ContainerXL>

    <SectionHeadImg>
    <Fragment slot="smltitle">
      Lighting + Installations
    </Fragment>
    <Fragment slot="title">
      Immersive Structures
    </Fragment>
    <Fragment slot="desc">
      We love the oppurtunuity to work on events outside of our own, we do so under Immersive Structures and have worked on over 50 events over the years. 
      These days we specialise and hold all necessary equipment for creative bamboo chill spaces and shade areas, as well as a range of other equipment.
    </Fragment>
    <Fragment slot="cover">
      <Picture  id="glass-card-dark"
                src={ImmersiveCover}
                sizes="(max-width: 2000px) 2000px, 1000px"
                widths={[1000, 1500, 2000]}
                aspectRatio="1:1"
                background="#f2f2f2"
                fit="cover"
                position="center"
                class="w-full rounded duration-200 hover:shadow-sm"
              />
    </Fragment>
    </SectionHeadImg>    
    
  </ContainerXl>

  <ContainerFW>
    
    <WorksSliderBall />
    <WorksSliderRay />
    <WorksSliderSnacks />

  </ContainerFW>


  <Container>
    <Cta />
  </Container>
  
</Layout>
