---
import ContainerFW from "@components/container-fullwidth.astro";
import ContainerXL from "@components/container-xl.astro";
import Container from "@components/container.astro";
import { Picture } from "@astrojs/image/components";

import Hero from "@components/hero.astro";
import Grid from "@components/hero-grid-artists.astro";
import GridSec from "@components/hero-grid-artists-sec.astro";

import ImmersiveSec from "@components/hero-grid-stage-sec.astro";
import Immersive from "@components/hero-grid-stage.astro";

import WorksSliderHH1 from "@components/slider-med-hh1.astro";
import WorksSliderHH2 from "@components/slider-med-hh2.astro";
import WorksSliderBoho from "@components/slider-med-boho.astro";
import WorksSliderDD from "@components/slider-med-dd.astro";
import WorksSliderRabbits from "@components/slider-med-rabbits.astro";

import SectionHeadImg from "@components/sectionhead-img.astro";
import SectionHeadImgRev from "@components/sectionhead-img-rev.astro";

import ImmersiveCover from '../assets/tbc/gal-boho-1.jpg';
import EventsCover from '../assets/tbc/hh2-2-med.jpg';
import EventsCover2 from '../assets/tbc/hh2-3-med.jpg';
import Cta from "@components/cta.astro";
import CtaMoon from "@components/cta-moonshot.astro";
import ProductSlider from "@components/slider-lrg-services-main.astro";
import BlogSlider from "@components/slider-content.astro";
import Logos from "@components/logos.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Home">
  <ContainerFW>
    <Hero />
  </ContainerFW>

  <ContainerFW>
    <Grid />
    <GridSec />
  </ContainerFW>

  <ContainerXL>
  
    <SectionHeadImg>
      <Fragment slot="smltitle">
        Artists
      </Fragment>
      <Fragment slot="title">
        Outdoor electronic artists.
      </Fragment>
      <Fragment slot="desc">
        The Boogie Collective started as a platform to help promote and book the right artists for the right sets and events in the 
        less organised days of Australian Outdoor Events. Luckily the whole industry has evolved over the years and so have we, turning into 
        a full blown music label and promotion team.
      </Fragment>
      <Fragment slot="cover">
        <Picture  id="glass-card-dark"
                  src={EventsCover2}
                  sizes="(max-width: 2000px) 2000px, 1000px"
                  widths={[1000, 1500, 2000]}
                  aspectRatio="1:1"
                  background="#f2f2f2"
                  fit="cover"
                  position="center"
                  class="w-full rounded duration-200 hover:shadow-sm"
                />
      </Fragment>
    </SectionHeadImg>

    <SectionHeadImgRev>
      <Fragment slot="smltitle">
        Events
      </Fragment>
      <Fragment slot="title">
        Come raise some dust with us.
      </Fragment>
      <Fragment slot="desc">
        We run two formats of events these days. Happiness Hill is our full-feature 3-day event, held in Jimna, QLD. 
        Happiness Valley is our sister single night events. We are working to bring you a series of these events asap.
      </Fragment>
      <Fragment slot="cover">
        <Picture  id="glass-card-dark"
                  src={EventsCover}
                  sizes="(max-width: 2000px) 2000px, 1000px"
                  widths={[1000, 1500, 2000]}
                  aspectRatio="1:1"
                  background="#f2f2f2"
                  fit="cover"
                  position="center"
                  class="w-full rounded duration-200 hover:shadow-sm"
                />
      </Fragment>
    </SectionHeadImgRev> 
    
  </ContainerXL>

  <ContainerFW>
  
    <Immersive />
    <ImmersiveSec />
  
    <WorksSliderHH1 />
    <WorksSliderHH2 />
    <WorksSliderDD />
    <WorksSliderBoho />
    <WorksSliderRabbits />

  </ContainerFW>
  
</Layout>
