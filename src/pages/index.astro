---
import ContainerFW from "@components/container-fullwidth.astro";
import ContainerXL from "@components/container-xl.astro";
import Container from "@components/container.astro";
import { Picture } from "@astrojs/image/components";

import Hero from "@components/hero.astro";

import HeroSlider from "@components/Slot-HeroFullscreenSlider.astro";
let backgroundUrl = 'url(/slider-shirts/tbc-shirt-slider1-5.webp)' // Define image for Slot-HeroFullscreen and then call BackgroundURL in Section
let backgroundUrl2 = 'url(/slider-shirts/tbc-shirt-slider5.webp)' // Define image for Slot-HeroFullscreen and then call BackgroundURL in Section
let backgroundUrl3 = 'url(/slider-shirts/tbc-shirt-slider6.webp)' // Define image for Slot-HeroFullscreen and then call BackgroundURL in Section

import ContactHero from "@components/hero-end.astro";

import Grid from "@components/hero-grid-artists.astro";
import GridSec from "@components/hero-grid-artists-sec.astro";

import ImmersiveSec from "@components/hero-grid-stage-sec.astro";
import Immersive from "@components/hero-grid-stage.astro";

import WorksSliderHH1 from "@components/slider-med-hh1.astro";
import WorksSliderHH2 from "@components/slider-med-hh2.astro";
import WorksSliderBoho from "@components/slider-med-boho.astro";
import WorksSliderDD from "@components/slider-med-dd.astro";
import WorksSliderRabbits from "@components/slider-med-rabbits.astro";

import SectionHeadImg from "@components/sectionhead-img.astro";

import EventsCover from '../assets/tbc/hh2-2-med.jpg';
import EventsCover2 from '../assets/tbc/hh2-3-med.jpg';
import Layout from "@layouts/Layout.astro";





---

<Layout title="Home">
  <ContainerFW>
    <Hero />
  </ContainerFW>

  <ContainerFW href="#installations">
    <WorksSliderBoho />
    <WorksSliderHH2 />
    <WorksSliderRabbits />
    <WorksSliderHH1 />
    <WorksSliderDD />
  </ContainerFW>
  
  <Container href="#artists">
    <SectionHeadImg>
      <Fragment slot="smltitle">
        Artists
      </Fragment>
      <Fragment slot="title">
        Outdoor electronic artists.
      </Fragment>
      <Fragment slot="desc">
        The Boogie Collective started as a platform to help promote and book the right artists for the right sets and events in the 
        less organised days of Australian Outdoor Events. Luckily the whole industry has evolved over the years and so have we, turning into 
        a full blown music label and promotion team.
      </Fragment>
      <Fragment slot="cover">
        <Picture  id="glass-card-dark"
                  src={EventsCover2}
                  sizes="(max-width: 2000px) 2000px, 1000px"
                  widths={[1000, 1500, 2000]}
                  aspectRatio="1:1"
                  background="#f2f2f2"
                  fit="cover"
                  position="center"
                  class="w-full rounded duration-200 hover:shadow-sm"
                />
      </Fragment>
    </SectionHeadImg>
  </Container>

  <ContainerXL>
    <GridSec />
  </ContainerXL>



  <Container href="#events">
    <SectionHeadImg>
      <Fragment slot="smltitle">
        Events
      </Fragment>
      <Fragment slot="title">
        Come raise some dust with us.
      </Fragment>
      <Fragment slot="desc">
        We run two formats of events these days. Happiness Hill is our full-feature 3-day event, held in Jimna, QLD. 
        Happiness Valley is our sister single night events. We only run events when they can be fully realised.
      </Fragment>
      <Fragment slot="cover">
        <Picture  id="glass-card-dark"
                  src={EventsCover}
                  sizes="(max-width: 2000px) 2000px, 1000px"
                  widths={[1000, 1500, 2000]}
                  aspectRatio="1:1"
                  background="#f2f2f2"
                  fit="cover"
                  position="center"
                  class="w-full rounded duration-200 hover:shadow-sm"
                />
      </Fragment>
    </SectionHeadImg> 
  </Container>

  <ContainerXL>
    <ImmersiveSec />
  </ContainerXL>

  
  <ContainerFW>
    <ContactHero />
  </ContainerFW>

  

  <ContainerFW>
    <Immersive />
    
  </ContainerFW>

  <ContainerFW>
    <Grid />
  </ContainerFW>

  

  <HeroSlider backgroundUrl={backgroundUrl} backgroundUrl2={backgroundUrl2} backgroundUrl3={backgroundUrl3}>
    <Fragment slot="smltitle">
      The Boogie Collective T-Shirts
    </Fragment>
    <Fragment slot="title">
      Limited Release of TBC Shirts, now available.
    </Fragment>
    <Fragment slot="desc">
      Stripe secure payment with ApplePay / GooglePay. $15 express shipping available, $7 standard shipping standard.
    </Fragment>
    
    <Fragment slot="smltitle2">
      The Boogie Collective T-Shirts
    </Fragment>
    <Fragment slot="title2">
      High-Quality Print on AS Colour Basics
    </Fragment>
    <Fragment slot="desc2">
      TBC Purple high-quality ink print for maximimum life length. Printed on AS colour basics, 100% cotton.
    </Fragment>
  
    <Fragment slot="smltitle3">
      The Boogie Collective T-Shirts
    </Fragment>
    <Fragment slot="title3">
      New Designs Coming Soon
    </Fragment>
    <Fragment slot="desc3">
      We've been designing a few rounds of prints over the last two years that we're very excited to finally start releasing.
    </Fragment>
  </HeroSlider>
  
</Layout>
